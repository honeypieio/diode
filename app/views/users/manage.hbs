<div class="row">
  <div class="col-md-12">
	   <table data-classes="table table-bordered table-hover table-light" data-pagination="true" data-search="true" data-toggle="table" data-striped="true">
		<thead>
			<th data-sortable="true">Name</th>
      <th data-sortable="true">Class</th>
      <th>Last Login</th>
			<th>Action</th>
		</thead>
		<tbody>
		{{#each users}}

			<tr>

        <td>{{name}}</td>
        <td>
          {{#ifCond class '==' 'global-admin'}}
            Global Admin
          {{/ifCond}}

          {{#ifCond class '==' 'local-admin'}}
            Local Admin
          {{/ifCond}}

          {{#ifCond class '==' 'tester'}}
            Tester
          {{/ifCond}}

        </td>
        <td>{{lastLogin}}</td>
				<td>
					<a class="btn btn-block btn-primary" href="{{public_address}}/users/manage/{{id}}">
            View/Update
					</a>
				</td>
			</tr>

		{{/each}}
		</tbody>
	</table>
  </div>
</div>
