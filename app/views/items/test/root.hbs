{{#ifCond items.length '>' 0}}
	<div class="row">
		<div class="col-md-12">
			<table data-classes="table table-bordered table-hover table-light" data-pagination="true" data-search="true" data-toggle="table" data-striped="true">
			<thead>
				<th data-sortable="true">ID</th>
				<th data-sortable="true" class="hidden-xs hidden-sm">Category</th>
				<th>Details</th>
	      <th data-sortable="true">Last Update</th>
	      <th>Action</th>
			</thead>
			<tbody>
			{{#each items}}
				{{#unless status}}
					{{#if (lookupArray ../user.permissions nextProcedure)}}
					<tr>
						<td>{{item_id}}</td>
						<td>{{lookup (lookup ../user.categories category_id) 'name'}}</td>
						<td>

							{{#if image}}
								<a href="{{image}}" target="_blank">
									<img src="{{image}}" style="display: block; width: 200px; height: auto;" />
								</a>
								<br />
							{{/if}}

							{{#each details}}
								<span>{{formToPlain @key}}: {{this}}</span>
								<br />
							{{/each}}
						</td>

						<td>
							{{niceTimestamp lastUpdated}}
						</td>
						<td>
							<a href="{{../public_address}}/items/test/{{uid}}" class="btn btn-block btn-primary">
								{{#each proceduresRequired}}
									{{#if @first}}
										{{details.name}}
									{{/if}}
								{{/each}}
							</a>
						</td>
					</tr>
					{{/if}}
				{{/unless}}
			{{/each}}
			</tbody>
		</table>
		</div>
	</div>

{{else}}

	 	<h3 class="text-center text-muted mt-4">No items to test!</h3>

{{/ifCond}}
