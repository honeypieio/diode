<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card">
      <div class="card-body">
        <div class="content">
          <h3 class="text-center text-success font-weight-bold mb-3">{{item.item_id}}</h3>

          <p class="text-center">Please attach a copy of the above ID code onto the item, <b>including any detatchable parts</b>!</p>
        </div>
      </div>

    </div>
  </div>
</div>

<div class="row">
  {{#if (lookupArray user.permissions item.nextProcedure)}}

    <div class="col-md-4 mx-auto">
      <a href="/items/test/{{item.uid}}">
        <div class="card category">
          <div class="content text-center p-4">
            <i class="fas fa-plug mb-3" style="font-size: 64px;"></i>
            <h3 class="text-plain">Start

              {{#each item.proceduresRequired}}
  							{{#if @first}}
  								{{details.name}}
  							{{/if}}
  						{{/each}}

            </h3>
          </div>
        </div>
      </a>
    </div>
  {{/if}}

  <div class="col-md-4 mx-auto">
    <a href="/items/register">
      <div class="card category">
        <div class="content text-center p-4">
          <i class="fas fa-clipboard-list mb-3" style="font-size: 64px;"></i>
          <h3 class="text-plain">Register Another Item</h3>
        </div>
      </div>
    </a>
  </div>

</div>
