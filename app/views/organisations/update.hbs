
<form action="{{public_address}}/organisations/update" method="post">
  <div class="row">
    <div class="col-md-6">
      <div class="container">
        <div class="row">
          <input class="form-control mb-2" name="details[title]" placeholder="Organisation Name" value="{{organisation.details.title}}" />
        </div>

        <div class="row">
          <textarea class="form-control mb-2" name="details[address]" placeholder="Organisation Address">{{organisation.details.address}}</textarea>
        </div>

        <div class="row">
          <button type="submit" class="btn btn-block btn-primary">Update Organisation</button>
        </div>

      </div>
    </div>
  </div>
</form>
