
<form method="post" action="{{public_address}}/invitation?token={{token}}" class="form-group">
  <div class="row">
    <div class="col-md-6 mx-auto">

      <div class="alert alert-info mb-4 text-center" role="alert">

        <h3 class="mb-1">Hey, {{viewedUser.first_name}}!</h3>
        <p class="mb-0">To activate your account, please set your password then login</p>

      </div>


      <div class="card px-4">
        <div class="card-body ">


          <div class="row mt-4">
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <input type="password" name="password" class="form-control input-sm" placeholder="Password" required>
                </div>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <input type="password" name="passwordConfirm" class="form-control input-sm" placeholder="Confirm Password" required>
                </div>
              </div>
            </div>


            <div class="row mb-0">
                <p class="mb-0 ml-3">Your password should:</p>
              </div>
              <div class="row">
                <ul class="ml-5">

                  <li>Be at least 8 characters long</li>
                  <li>Include at least one digit</li>
                  <li>Include at least one lower case</li>
                  <li>Include at least one upper case</li>

                </ul>
            </div>


        </div>
      </div>


      <div class="row">

        <button type="submit" class="btn btn-success btn-block btn-lg">Activate My Account!</button>

      </div>

    </div>
  </div>

  </form>
